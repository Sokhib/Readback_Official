<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/ic_readback_background"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageview_home"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="@dimen/size_24dp"
            android:background="@drawable/round_white_background"
            android:contentDescription="@string/home_icon"
            android:elevation="@dimen/size_8dp"
            android:minWidth="48dp"
            android:minHeight="48dp"
            android:padding="@dimen/size_16dp"
            android:src="@drawable/ic_settings"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:layout_width="168dp"
            android:layout_height="168dp"
            android:contentDescription="@string/image_logo"
            android:gravity="center"
            android:src="@drawable/read_512"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.35">

        </ImageView>

        <com.google.android.gms.ads.AdView xmlns:ads="http://schemas.android.com/apk/res-auto"
            android:id="@+id/adViewStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/size_16dp"
            ads:adSize="BANNER"
            ads:adUnitId="ca-app-pub-3940256099942544/6300978111"
            ads:layout_constraintBottom_toTopOf="@id/textview_pick"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/textview_pick"
            style="@style/TextAppearance.AppTheme.Display.Black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="@dimen/size_16dp"
            android:text="@string/game_desc"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@id/start_game"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

        </TextView>

        <TextView
            android:id="@+id/start_game"
            style="@style/TextAppearance.AppTheme.Display.White"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/size_24dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="24dp"
            android:background="@drawable/round_gradient_text_background"
            android:gravity="center"
            android:padding="@dimen/size_16dp"
            android:text="@string/start_playing"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"

            app:layout_constraintStart_toStartOf="parent">

        </TextView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>