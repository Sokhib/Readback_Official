<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/ic_readback_background"
        android:gravity="center"
        android:orientation="vertical">

        <!--TODO: Will be changed to logo -->
        <TextView
            style="@style/TextAppearance.AppTheme.Display.Black"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/app_name"
            android:textSize="46sp">

        </TextView>

        <TextView
            style="@style/TextAppearance.AppTheme.Display.Black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/game_desc"
            android:textSize="20sp">

        </TextView>

        <TextView
            android:id="@+id/start_game"
            style="@style/TextAppearance.AppTheme.Display.White"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/size_24dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="24dp"
            android:background="@drawable/round_gradient_text_background"
            android:gravity="center"
            android:padding="@dimen/size_16dp"
            android:text="@string/start_playing">

        </TextView>
    </LinearLayout>
</layout>