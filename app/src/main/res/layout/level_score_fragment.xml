<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/ic_score_background"
        tools:context=".ui.levelscore.LevelScoreFragment">

        <com.google.android.gms.ads.AdView
            android:id="@+id/adViewScore"
            android:layout_width="wrap_content"
            android:layout_gravity="top|center"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_24dp"
            app:adSize="BANNER"
            app:adUnitId="ca-app-pub-3940256099942544/6300978111" />


        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/animationViewLottie"
            android:layout_width="match_parent"
            android:layout_height="480dp"
            android:layout_marginHorizontal="32dp"
            android:layout_marginTop="112dp"
            android:elevation="@dimen/size_16dp"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:minHeight="400dp"
            android:padding="@dimen/size_24dp"
            app:lottie_autoPlay="true"
            app:lottie_loop="true" />


        <TextView
            android:id="@+id/textview_continue"
            style="@style/TextAppearance.AppTheme.Display.White"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/size_24dp"
            android:layout_marginBottom="24dp"
            android:background="@drawable/round_gradient_text_background"
            android:gravity="center"
            android:layout_gravity="bottom"
            android:padding="@dimen/size_16dp"
            android:text="@string/continue_game">

        </TextView>

    </FrameLayout>
</layout>