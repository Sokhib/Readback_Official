<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="size"
            type="Integer" />

        <variable
            name="gmviewmodel"
            type="com.sokhibdzhon.readback.ui.game.GameViewModel" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.motion.widget.MotionLayout
            android:id="@+id/motionLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            app:layoutDescription="@xml/game_fragment_scene"
            tools:context=".ui.game.GameFragment">

            <FrameLayout
                android:id="@+id/frameLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:minHeight="320dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:background="@drawable/ic_word_background" />

            <ImageView
                android:id="@+id/imageview_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_24dp"
                android:background="@drawable/round_grey_background_alpha"
                android:contentDescription="@string/close_icon"
                android:gravity="center"
                android:minWidth="48dp"
                android:minHeight="48dp"
                android:padding="8dp"
                android:src="@drawable/ic_close_white_18dp"
                app:layout_constraintEnd_toStartOf="@id/guideline_close"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="exit" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.33" />

            <com.mikhaellopez.circularprogressbar.CircularProgressBar
                android:id="@+id/circular_time_view"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_marginTop="@dimen/size_24dp"
                android:minWidth="48dp"
                android:minHeight="48dp"
                app:cpb_background_progressbar_color="@color/white"
                app:cpb_background_progressbar_width="4dp"
                app:cpb_progress_direction="to_left"
                app:cpb_progressbar_color="@color/green_300"
                app:cpb_progressbar_width="4dp"
                app:cpb_round_border="true"
                app:layout_constraintEnd_toStartOf="@id/guideline_score"

                app:layout_constraintStart_toEndOf="@id/guideline_close"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.66" />

            <TextView
                android:id="@+id/textview_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_24dp"
                android:background="@drawable/round_grey_background_alpha"
                android:gravity="center"
                android:minWidth="48dp"
                android:minHeight="48dp"
                android:paddingHorizontal="@dimen/size_16dp"
                android:textAppearance="@style/TextAppearance.AppTheme.Display.White"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/guideline_score"
                app:layout_constraintTop_toTopOf="parent"
                app:score="@{gmviewmodel.score}"
                app:size="@{size}"
                app:type="@{gmviewmodel.type}"
                tools:text="20" />
            <!--    cover with white and animate-->
            <TextView
                android:id="@+id/textView_word"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="24dp"
                android:layout_marginTop="@dimen/size_24dp"
                android:background="@drawable/round_white_background"
                android:elevation="@dimen/size_16dp"
                android:gravity="center"
                android:padding="@dimen/size_24dp"
                android:text="@{gmviewmodel.current.word}"
                android:textAppearance="@style/TextAppearance.AppTheme.Display.Black"
                android:textSize="48sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/guideline"
                tools:text="book" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_begin="140dp" />

            <TextView
                android:id="@+id/text_option_1"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginHorizontal="@dimen/size_24dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/round_white_background"
                android:elevation="8dp"
                android:gravity="center"
                android:minHeight="32dp"
                android:paddingVertical="8dp"
                android:text="@{gmviewmodel.current.options[0]}"
                android:textAppearance="@style/TextAppearance.AppTheme.Display.Black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/frameLayout"
                tools:text="koab" />

            <TextView
                android:id="@+id/text_option_2"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginHorizontal="@dimen/size_24dp"
                android:layout_marginTop="@dimen/size_16dp"
                android:background="@drawable/round_white_background"
                android:elevation="@dimen/size_8dp"
                android:gravity="center"
                android:minHeight="32dp"
                android:paddingVertical="8dp"
                android:text="@{gmviewmodel.current.options[1]}"
                android:textAppearance="@style/TextAppearance.AppTheme.Display.Black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_option_1"
                tools:text="kobo" />

            <TextView
                android:id="@+id/text_option_3"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginHorizontal="@dimen/size_24dp"
                android:layout_marginTop="@dimen/size_16dp"
                android:background="@drawable/round_white_background"
                android:elevation="@dimen/size_8dp"
                android:gravity="center"
                android:minHeight="32dp"
                android:paddingVertical="8dp"
                android:text="@{gmviewmodel.current.options[2]}"
                android:textAppearance="@style/TextAppearance.AppTheme.Display.Black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_option_2"
                tools:text="koab" />

            <TextView
                android:id="@+id/text_option_4"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginHorizontal="@dimen/size_24dp"
                android:layout_marginTop="@dimen/size_16dp"
                android:background="@drawable/round_white_background"
                android:elevation="@dimen/size_8dp"
                android:gravity="center"
                android:minHeight="32dp"
                android:paddingVertical="8dp"
                android:text="@{gmviewmodel.current.options[3]}"
                android:textAppearance="@style/TextAppearance.AppTheme.Display.Black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_option_3"
                tools:text="book" />

            <TextView
                android:id="@+id/skip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/size_24dp"
                android:layout_marginTop="24dp"
                android:elevation="30dp"
                android:gravity="center"
                android:minHeight="32dp"
                android:textAppearance="@style/TextAppearance.AppTheme.Display.Black"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_option_4"
                app:skipText="@{gmviewmodel.skipNumber}"
                tools:text="@string/skip" />

        </androidx.constraintlayout.motion.widget.MotionLayout>

        <ProgressBar
            android:id="@+id/progress_word_load"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:indeterminateTint="@color/green_500"
            android:progressTint="@color/green_500"
            app:progressBarVisibility="@{gmviewmodel.wordList.status}" />
    </FrameLayout>
</layout>