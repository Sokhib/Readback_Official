<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="gmviewmodel"
            type="com.sokhibdzhon.readback.ui.game.GameViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".ui.game.GameFragment">

        <FrameLayout
            android:id="@+id/frameLayout"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:background="@drawable/ic_word_background"
            android:gravity="center"
            android:minHeight="300dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/size_24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <!--        Change to icons and button  -->
            <ImageView
                android:id="@+id/imageview_close"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="@dimen/size_8dp"
                android:layout_weight="1"
                android:background="@drawable/round_grey_background_alpha"
                android:contentDescription="@string/close_icon"
                android:gravity="center"
                android:padding="8dp"

                android:src="@drawable/ic_close_white_18dp"
                tools:text="exit" />

            <com.mikhaellopez.circularprogressbar.CircularProgressBar
                android:id="@+id/circular_time_view"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_margin="@dimen/size_8dp"
                android:minWidth="48dp"
                android:minHeight="48dp"
                app:cpb_background_progressbar_color="@color/white"
                app:cpb_background_progressbar_width="4dp"
                app:cpb_progress_direction="to_left"
                app:cpb_progressbar_color="@color/green_300"
                app:cpb_progressbar_width="4dp"
                app:cpb_round_border="true" />

            <TextView
                android:id="@+id/textview_score"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="@dimen/size_8dp"
                android:layout_weight="1"
                android:background="@drawable/round_grey_background_alpha"
                android:gravity="center"
                android:padding="@dimen/size_8dp"
                android:text="@{gmviewmodel.score.toString()}"
                android:textAppearance="@style/TextAppearance.AppTheme.Display.White"
                tools:text="20" />
        </LinearLayout>
        <!--    cover with white and animate-->
        <TextView
            android:id="@+id/textView_word"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/round_white_background"
            android:padding="@dimen/size_24dp"
            android:text="@{gmviewmodel.current.word}"
            android:textAppearance="@style/TextAppearance.AppTheme.Display.Black"
            android:textSize="48sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/guideline"
            tools:text="book" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="120dp" />

        <TextView
            android:id="@+id/text_option_1"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginHorizontal="@dimen/size_24dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/round_white_background"
            android:elevation="8dp"
            android:gravity="center"
            android:minHeight="44dp"
            android:paddingVertical="8dp"
            android:text="@{gmviewmodel.current.options[0]}"
            android:textAppearance="@style/TextAppearance.AppTheme.Display.Black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/frameLayout"
            tools:text="koab" />

        <TextView
            android:id="@+id/text_option_2"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginHorizontal="@dimen/size_24dp"
            android:layout_marginTop="@dimen/size_16dp"
            android:background="@drawable/round_white_background"
            android:elevation="@dimen/size_8dp"
            android:gravity="center"
            android:minHeight="44dp"
            android:paddingVertical="8dp"
            android:text="@{gmviewmodel.current.options[1]}"
            android:textAppearance="@style/TextAppearance.AppTheme.Display.Black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_option_1"
            tools:text="kobo" />

        <TextView
            android:id="@+id/text_option_3"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginHorizontal="@dimen/size_24dp"
            android:layout_marginTop="@dimen/size_16dp"
            android:background="@drawable/round_white_background"
            android:elevation="@dimen/size_8dp"
            android:gravity="center"
            android:minHeight="44dp"
            android:paddingVertical="8dp"
            android:text="@{gmviewmodel.current.options[2]}"
            android:textAppearance="@style/TextAppearance.AppTheme.Display.Black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_option_2"
            tools:text="koab" />

        <TextView
            android:id="@+id/text_option_4"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginHorizontal="@dimen/size_24dp"
            android:layout_marginTop="@dimen/size_16dp"
            android:background="@drawable/round_white_background"
            android:elevation="@dimen/size_8dp"
            android:gravity="center"
            android:minHeight="44dp"
            android:paddingVertical="8dp"
            android:text="@{gmviewmodel.current.options[3]}"
            android:textAppearance="@style/TextAppearance.AppTheme.Display.Black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_option_3"
            tools:text="book" />

        <TextView
            android:id="@+id/skip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/size_24dp"
            android:layout_marginTop="24dp"
            android:elevation="30dp"
            android:gravity="center"
            android:onClick="@{()->gmviewmodel.nextWord()}"
            android:text="@string/skip"
            android:textAppearance="@style/TextAppearance.AppTheme.Display.Black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_option_4" />

        <ProgressBar
            android:id="@+id/progress_gamestart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            android:indeterminateTint="@color/green_300"
            android:indeterminateTintMode="src_atop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.4" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>