<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.settings.SettingsFragment">

        <ImageView
            android:id="@+id/imageview_close"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="@dimen/size_24dp"
            android:background="@drawable/round_grey_background_alpha"
            android:contentDescription="@string/close_icon"
            android:elevation="@dimen/size_16dp"
            android:gravity="center"
            android:minWidth="48dp"
            android:minHeight="48dp"
            android:padding="16dp"
            android:src="@drawable/ic_close_black_18dp"
            tools:text="exit" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:layout_margin="@dimen/size_16dp"
            android:orientation="vertical"
            android:padding="@dimen/size_8dp">

            <com.xw.repo.BubbleSeekBar
                android:id="@+id/seekbar_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:bsb_bubble_color="@color/yellow_900"
                app:bsb_bubble_text_color="@color/white"
                app:bsb_max="90"
                app:bsb_min="15"
                app:bsb_progress="15"
                app:bsb_second_track_color="@color/yellow_900"
                app:bsb_section_count="5"
                app:bsb_section_text_position="bottom_sides"
                app:bsb_seek_by_section="true"
                app:bsb_seek_step_section="true"
                app:bsb_show_section_mark="true"
                app:bsb_show_section_text="true"
                app:bsb_show_thumb_text="true"
                app:bsb_touch_to_seek="true"
                app:bsb_track_color="@color/yellow_700" />

            <TextView
                android:id="@+id/textview_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/size_16dp"
                android:textAppearance="@style/TextAppearance.AppTheme.Display.Black" />

            <com.xw.repo.BubbleSeekBar
                android:id="@+id/seekbar_skips"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:bsb_bubble_color="@color/yellow_900"
                app:bsb_bubble_text_color="@color/white"
                app:bsb_max="15"
                app:bsb_min="0"
                app:bsb_progress="0"
                app:bsb_second_track_color="@color/yellow_900"
                app:bsb_section_count="15"
                app:bsb_section_text_position="bottom_sides"
                app:bsb_seek_by_section="true"
                app:bsb_seek_step_section="true"
                app:bsb_show_section_mark="true"
                app:bsb_show_section_text="true"
                app:bsb_show_thumb_text="true"
                app:bsb_touch_to_seek="true"
                app:bsb_track_color="@color/yellow_700" />

            <TextView
                android:id="@+id/textview_skips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/size_16dp"
                android:textAppearance="@style/TextAppearance.AppTheme.Display.Black" />
        </LinearLayout>

        <TextView
            android:id="@+id/textview_start_custom_game"
            style="@style/TextAppearance.AppTheme.Display.White"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginHorizontal="@dimen/size_24dp"
            android:layout_marginBottom="24dp"
            android:background="@drawable/round_gradient_text_background"
            android:gravity="center"
            android:padding="@dimen/size_16dp"
            android:text="@string/start_custom_game">

        </TextView>

    </FrameLayout>
</layout>